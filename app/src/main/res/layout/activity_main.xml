<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="70dp"
            android:weightSum="3"
            >
            <FrameLayout android:layout_weight="1" android:layout_height="match_parent" android:layout_width="0dp">
            <ImageView
                android:id="@+id/btn_hint"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical|left"
                android:paddingLeft="6dp"
                app:srcCompat="@drawable/hint" />
            </FrameLayout>


            <TextView
                android:id="@+id/wrongAnswerMsg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/mistake"
                android:gravity="center"
                android:textColor="#9D9D9D"
                android:textSize="16sp"
                />

            <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textColor="#9D9D9D"
                android:textSize="16sp"
                android:paddingRight="2dp"
                />

        </LinearLayout>

        <GridView
            android:id="@+id/gameBoard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="9"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:stretchMode="columnWidth"
            android:gravity="center"
        />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="9"
            >


            <TextView
                android:onClick="onAnswerClick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#007ACC"
                android:textSize="42sp"
                android:text="1"
                android:layout_weight="1"
                android:gravity="center"
                />
            <TextView
                android:onClick="onAnswerClick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#007ACC"
                android:textSize="42sp"
                android:text="2"
                android:layout_weight="1"
                android:gravity="center"
                />

            <TextView
                android:onClick="onAnswerClick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#007ACC"
                android:textSize="42sp"
                android:text="3"
                android:layout_weight="1"
                android:gravity="center"
                />
            <TextView
                android:onClick="onAnswerClick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#007ACC"
                android:textSize="42sp"
                android:text="4"
                android:layout_weight="1"
                android:gravity="center"
                />
            <TextView
                android:onClick="onAnswerClick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#007ACC"
                android:textSize="42sp"
                android:text="5"
                android:layout_weight="1"
                android:gravity="center"
                />
            <TextView
                android:onClick="onAnswerClick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#007ACC"
                android:textSize="42sp"
                android:text="6"
                android:layout_weight="1"
                android:gravity="center"
                />
            <TextView
                android:onClick="onAnswerClick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#007ACC"
                android:textSize="42sp"
                android:text="7"
                android:layout_weight="1"
                android:gravity="center"
                />
            <TextView
                android:onClick="onAnswerClick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#007ACC"
                android:textSize="42sp"
                android:text="8"
                android:layout_weight="1"
                android:gravity="center"
                />
            <TextView
                android:onClick="onAnswerClick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#007ACC"
                android:textSize="42sp"
                android:text="9"
                android:layout_weight="1"
                android:gravity="center"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                app:adSize="BANNER"
                app:adUnitId="ca-app-pub-8275397647362849/1721274267" />
        </RelativeLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>